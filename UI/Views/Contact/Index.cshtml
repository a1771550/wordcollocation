@model Contact

@{
	ViewBag.Title = Resources.Contact;
}
<div class="span5">
	<h3>@Resources.Contact</h3>

	<p class="lead">@Resources.ContactParagraph</p>

	@if (!string.IsNullOrEmpty(ViewBag.MessageOK))
	{
		<h4>@ViewBag.MessageOK</h4>
	}
	<hr />

	<div class="span3">
		@using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "contact-form" }))
		{
			@Html.AntiForgeryToken()

			@Html.ValidationSummary(false)

			
				<div class="form-group">
					@Html.LabelFor(model => model.UserName)
					@Html.EditorFor(model => model.UserName)
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Email)
					@Html.EditorFor(model => model.Email, new { @class = "text" })
				</div>
			

			<div class="form-group">
				@Html.LabelFor(model => model.Message)
				@Html.TextAreaFor(model => model.Message, new { @rows = "5", style="width:120%;"})
			</div>

			<button type="submit">@Resources.Send</button>

		}
	</div>

</div>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")

}