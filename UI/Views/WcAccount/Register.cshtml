@model UI.Models.WcRegisterViewModel
@{
	ViewBag.Title = Resources.RegisterAsNewUser;
}

<style>
	#register-form input {
		width: 80%;
	}
</style>



<div class="span5">
	<h3>@ViewBag.Title</h3>
	<hr />
	@using (Html.BeginForm("Register", "WcAccount", FormMethod.Post, new { id = "register-form", role = "form" }))
	{
		@Html.AntiForgeryToken()

		<input type="hidden" id="duplicate" value="@Resources.DuplicatedEmail" />
		<input type="hidden" id="invalid" value="@Resources.EmailFormatError" />
		<input type="hidden" id="pwdlength" value="@Resources.PasswordLengthError" />

		<div class="span6">
			@Html.ValidationSummary(false)
			<p id="alert" class="text-danger"></p>
		</div>
		
		<div class="span4">
			<div class="form-group">
				@Html.TextBoxFor(m => m.Email, new { placeholder = Resources.Email, @class = "" }) <i class="glyphicons-icon circle_ok" id="emailOk"></i>
			</div>

			<div class="form-group">
				@Html.TextBoxFor(m => m.UserName, new { placeholder = Resources.UserName })
			</div>

			<div class="form-group">
				@Html.PasswordFor(m => m.Password, new { placeholder = Resources.Password }) <i class="glyphicons-icon circle_ok" id="pwdOk"></i>
				<div class="text-smaller line-height-small">(@Resources.PasswordFormat)</div>
			</div>
			<div class="form-group">

				@Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = Resources.ConfirmPassword })

			</div>
			<div class="form-group">

				<button type="submit">@Resources.Register</button>

			</div>
		</div>

	}
</div>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	<script>
		(function ($)
		{
			$("input[type=text]:first").focus();
		})(jQuery);

	</script>
	<script src="~/js/register.js"></script>
}