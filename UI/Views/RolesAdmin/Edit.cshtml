@model UI.Models.RoleViewModel

@{
    ViewBag.Title = Model==null?"Create": "Edit";
	var Id = Model == null ? "0" : Model.Id;
}

<h3>@ViewBag.Title</h3>


@using (Html.BeginForm("Edit","RolesAdmin", FormMethod.Post, new{@class="contact-form"}))
{
    @Html.AntiForgeryToken()
    
    <div class="">
        
        @Html.ValidationSummary()
        @Html.Hidden("Id", Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "" })
            <div class="">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <button type="submit">@Resources.Send</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
